        <TextView
            android:id="@+id/identitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Identitas Pelapor"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Nama"
            android:textSize="12sp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identitas"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/light_grey"
            android:hint="Harmoko"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/nama"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Email"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et1"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/light_grey"
            android:hint="harmoko123@gmail.com"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/ktp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Nomor KTP"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et2"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/light_grey"
            android:hint="3521xxxxxxxxxxxx"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/ktp"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Alamat"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et3"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/light_grey"
            android:layout_marginHorizontal="10dp"
            android:hint="Jl. Mangga No. 4"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/alamat"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Kategori Aduan "
            android:textSize="12sp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et4"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/kategori"
            app:layout_constraintTop_toBottomOf="@id/et4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:popupBackground="@color/white"
            android:background="@drawable/bg_spinner"
            tools:ignore="RtlCompat,RtlSymmetry,UnusedAttribute" />

        <TextView
            android:id="@+id/identitas2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Identitas Terlapor"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/kategori"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nama2"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Nama"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identitas2"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/light_grey"
            android:hint="Bambang"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/nama2"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/alamat2"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Alamat"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et5"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et6"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/light_grey"
            android:hint="Jl. Kelapa No. 6"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/alamat2"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/alasan"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Alasan Pelaporan"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et6"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/et7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/dark_blue"
            android:layout_marginHorizontal="10dp"
            android:textColorHint="@color/light_grey"
            android:gravity="top"
            android:hint="Terlapor tidak layak menerima bansos karena mampu"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/alasan"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/button_file"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/poppins_regular"
            android:text="Pilih File"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et7"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ket_upload_file"
            android:layout_width="match_parent"
            android:layout_height="32.5dp"
            android:layout_marginTop="5.6dp"
            android:gravity="center_vertical"
            android:paddingLeft="26dp"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="105dp"
            android:text="Tidak ada file"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:background="@drawable/bg_textview"
            app:layout_constraintStart_toEndOf="@+id/button_file"
            app:layout_constraintTop_toBottomOf="@+id/et7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/poppins_regular"
            android:text="Kirim Laporan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ket_upload_file"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>